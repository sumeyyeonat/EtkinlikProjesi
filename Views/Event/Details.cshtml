@model EtkinlikSistemi.Models.Event

<div class="container mt-4">
    <h1>Etkinlik Detayları</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Etkinlik Adı</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        
        <dt class="col-sm-2">Mekan</dt>
        <dd class="col-sm-10">@Model.Location</dd>
        
        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.EventDate.ToLongDateString()</dd>
        
        <dt class="col-sm-2">Kapasite</dt>
        <dd class="col-sm-10">@Model.Capacity Kişi</dd>
    </dl>
    <div>
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>