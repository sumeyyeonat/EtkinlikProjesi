@model EtkinlikSistemi.Models.Event

@{
    ViewData["Title"] = "Yeni Etkinlik";
}

<div class="container mt-4">
    <h4>Yeni Etkinlik Oluştur</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Location" class="form-label"></label>
                    <input asp-for="Location" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EventDate" class="form-label"></label>
                    <input asp-for="EventDate" class="form-control" type="date" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Capacity" class="form-label"></label>
                    <input asp-for="Capacity" class="form-control" />
                </div>

                <button type="submit" class="btn btn-success">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}